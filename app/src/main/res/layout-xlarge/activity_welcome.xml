<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_onboarding">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/img_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@+id/midLayout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/midLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"
            app:layout_constraintBottom_toTopOf="@+id/bottomLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtYourCompleteTurfSolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="@string/your_complete_turf_solution"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/img_welcome"
                app:layout_constraintEnd_toStartOf="@+id/txtShop"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/txtYourCompleteTurfSolution"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/shop"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imgShop"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@+id/imgShop"
                app:layout_constraintTop_toTopOf="@+id/imgShop"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_34sdp"
                android:src="@drawable/img_welcome"
                app:layout_constraintEnd_toStartOf="@+id/txtTrack"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/imgShop"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTrack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/track_your_orders"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imgTrack"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@+id/imgTrack"
                app:layout_constraintTop_toTopOf="@+id/imgTrack"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgShowCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_34sdp"
                android:src="@drawable/img_welcome"
                app:layout_constraintEnd_toStartOf="@+id/txtShowCase"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/imgTrack"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtShowCase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/showcase_your_portfolios"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imgShowCase"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@+id/imgShowCase"
                app:layout_constraintTop_toTopOf="@+id/imgShowCase"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgQuotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_34sdp"
                android:src="@drawable/img_welcome"
                app:layout_constraintEnd_toStartOf="@+id/txtQuotes"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/imgShowCase"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/create_all_quotes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imgQuotes"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@+id/imgQuotes"
                app:layout_constraintTop_toTopOf="@+id/imgQuotes"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/midLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="@string/skip"
                android:padding="@dimen/_12sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:id="@+id/viewSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/theme_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSkip"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:drawablePadding="@dimen/_8sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="@string/sign_up"
                android:drawableEnd="@drawable/ic_next"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/viewSignUp"
                app:layout_constraintEnd_toEndOf="@+id/viewSignUp"
                app:layout_constraintTop_toTopOf="@+id/viewSignUp"
                app:layout_constraintStart_toStartOf="@+id/viewSignUp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
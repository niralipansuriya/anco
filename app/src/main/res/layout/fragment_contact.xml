<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.ancoturf.presentation.home.shop.ShopFragment">

    <include
        layout="@layout/header_filter"
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/orders_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOrders"
                android:text="@string/shop_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtShop"
                android:text="@string/tracking_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPortfolio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTracking"
                android:text="@string/portfolio_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPortfolio"
                android:text="@string/quote_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuickOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtQuote"
                android:text="@string/quick_order_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTurfCalculator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtQuickOrder"
                android:text="@string/turf_calculator_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLawnTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTurfCalculator"
                android:text="@string/lawn_tips_title"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_24ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtContactLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLawnTips"
                android:text="@string/contact_label"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_32ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtContactLabel"
                tools:text="enquire@ancoturf.com.au"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_14ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtEmail"
                tools:text="1800 010 110"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_14ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPhone"
                tools:text="200 Manks Road,"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="@dimen/_14ssp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutCallNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/bg_green_rounded_corner"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@id/tvBuiltAndMentionBy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAddress"
                app:layout_constraintVertical_bias="0.0">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCallNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:gravity="center"
                    android:text="@string/call_now"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:gravity="center"
                    android:src="@drawable/ic_next"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtCallNow"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBuiltAndMentionBy"
                app:layout_constraintBottom_toTopOf="@id/tvCmpName"
                android:text="@string/built_and_maintained_by"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/sf_pro_display_bold"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCmpName"
                android:text="@string/sharp_instincts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/theme_green"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
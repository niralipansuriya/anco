<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.app.ancoturf.utils.customeview.ExpandableLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/expand_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:background="@color/faq_que_bg"
            android:layout_height="wrap_content"
            >


            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:drawableLeft="@drawable/ic_add_box"
                android:textColor="@color/mdtp_white"
                android:textSize="@dimen/_16sdp"
                tools:text="What is e-scooter?"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faq_ans"
            android:orientation="vertical"
            >

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvAnswer"
                android:padding="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/faq_que_bg"
                android:textSize="@dimen/_14sdp"
                tools:text="E-Scooter is android app using this app you can ride scooter and you can make your heal"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.app.ancoturf.utils.customeview.ExpandableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
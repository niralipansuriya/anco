<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="3000"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="1440">

    <shape
            android:innerRadius="20dp"
            android:shape="ring"
            android:thickness="@dimen/_2sdp"
            android:useLevel="false">
        <size
                android:width="@dimen/_48sdp"
                android:height="@dimen/_48sdp" />

        <gradient
                android:centerColor="#8068605a"
                android:centerY="0.5"
                android:endColor="#231F20"
                android:startColor="#00d7d3d0"
                android:type="sweep"
                android:useLevel="false" />
    </shape>

</rotate>
